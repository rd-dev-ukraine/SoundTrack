{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "pretty": true,
        "outDir": "./native/lib",
        "jsx": "react",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "typeRoots": [
            "./node_modules/@types",
            "./common/declarations"
        ],
        "types": [
            "react",
            "react-native",
            "react-navigation"
        ]
    },
    "exclude": [
        "node_modules",
        "!node_modules/@types",
        "native/lib",
        "web"
    ]
}